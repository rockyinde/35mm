<android.support.v4.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/subs_drawer_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<android.support.design.widget.CoordinatorLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:showIn="@layout/activity_fragment_holder">


		<android.support.v4.widget.NestedScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fillViewport="true"
			app:layout_behavior="@string/appbar_scrolling_view_behavior">

			<!-- Scrolling content -->

			<!-- FRAGMENTS will be placed here ... -->
			<android.support.v4.view.ViewPager
				android:id="@+id/pager"
				android:layout_width="match_parent"
				android:layout_height="match_parent" />

		</android.support.v4.widget.NestedScrollView>

		<android.support.design.widget.AppBarLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

			<!-- TOOLBAR / ACTIONBAR -->
			<android.support.v7.widget.Toolbar
				android:id="@+id/toolbar"
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"
				android:theme="@style/ThemeOverlay.AppCompat.Dark"
				app:layout_scrollFlags="scroll|enterAlways" />

			<!-- TABS -->
			<android.support.design.widget.TabLayout
				android:id="@+id/tab_layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="?attr/colorPrimary"
				android:layout_gravity="center_horizontal"
				app:tabMode="scrollable"/>

		</android.support.design.widget.AppBarLayout>

	</android.support.design.widget.CoordinatorLayout>


	<include
		android:layout_width="240dp"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		layout="@layout/subs_drawer"/>

	<!-- Test AdMob Ad Unit Banner
	-->

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
        </com.google.android.gms.ads.AdView>
    </RelativeLayout>
	<!-- Prod AdMob Ad Banner
	-->
        <!--ads:adUnitId="ca-app-pub-3940256099942544/6300978111"> test -->
		<!--ads:adUnitId="ca-app-pub-9258673963588821/7554016880"> prod -->
</android.support.v4.widget.DrawerLayout>
